<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/lblCan"
        android:layout_marginLeft="15dp"
        android:textSize="13dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coca cola"
        android:id="@+id/lblDescripcion"
        android:textSize="13dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/lblCan"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.30 €"
        android:id="@+id/lblPrecio"
        android:textSize="12dp"
        android:layout_alignRight="@+id/lblTotal"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.00 €"
        android:id="@+id/lblTotal"
        android:textSize="16dp"
        android:layout_below="@+id/lblPrecio"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Total:"
        android:id="@+id/textView"
        android:textSize="16dp"
        android:layout_below="@+id/lblDescripcion"
        android:layout_toLeftOf="@+id/lblTotal"
        android:layout_toStartOf="@+id/lblTotal"
        android:layout_marginRight="29dp" />

</RelativeLayout>