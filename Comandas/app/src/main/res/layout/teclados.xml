<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">


        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="1"
            android:layout_gravity="center_vertical"
            android:textSize="12dp"
            android:onClick="clickCan"
            android:tag="1"
            android:layout_weight="1"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="2"
            android:layout_gravity="center_vertical"
            android:textSize="12dp"
            android:layout_marginLeft="-2dp"
            android:onClick="clickCan"
            android:tag="2"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="3"
            android:layout_gravity="center_vertical"
            android:textSize="12dp"
            android:layout_marginLeft="-2dp"
            android:onClick="clickCan"
            android:tag="3"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="4"
            android:layout_gravity="center_vertical"
            android:textSize="12dp"
            android:layout_marginLeft="-2dp"
            android:onClick="clickCan"
            android:tag="4"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="5"
            android:layout_gravity="center_vertical"
            android:textSize="12dp"
            android:layout_marginLeft="-2dp"
            android:onClick="clickCan"
            android:tag="5"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="6"
            android:layout_gravity="center_vertical"
            android:textSize="12dp"
            android:layout_marginLeft="-2dp"
            android:onClick="clickCan"
            android:tag="6"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="7"
            android:layout_gravity="center_vertical"
            android:textSize="12dp"
            android:layout_marginLeft="-2dp"
            android:onClick="clickCan"
            android:tag="7"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="8"
            android:layout_gravity="center_vertical"
            android:textSize="12dp"
            android:layout_marginLeft="-2dp"
            android:onClick="clickCan"
            android:tag="8"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="9"
            android:layout_gravity="center_vertical"
            android:textSize="12dp"
            android:layout_marginLeft="-2dp"
            android:onClick="clickCan"
            android:tag="9"
            android:layout_weight="1"
            />



    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_weight="0.20"
        android:layout_alignParentLeft="true"
        android:id="@+id/pneBotones"
        android:layout_below="@+id/linearLayout2">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Bar"
            android:id="@+id/bar"
            android:layout_marginTop="2dp"
            android:tag="Bar"
            android:onClick="clickMenu"
            android:layout_weight="1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Desayuno"
            android:id="@+id/cafeteria"
            android:layout_marginTop="2dp"
            android:textSize="7dp"
            android:tag="Desayuno"
            android:onClick="clickMenu"
            android:layout_weight="1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:text="Tapas"
            android:id="@+id/tapas"
            android:layout_marginTop="2dp"
            android:textSize="9dp"
            android:tag="Tapas"
            android:onClick="clickMenu"
            android:layout_weight="1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:text="Comida"
            android:id="@+id/btnSalir"
            android:layout_marginTop="2dp"
            android:textSize="9dp"
            android:tag="Comida"
            android:onClick="clickMenu"
            android:layout_weight="1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:text="Bocatas"
            android:id="@+id/button2"
            android:layout_marginTop="2dp"
            android:textSize="9dp"
            android:tag="Bocatas"
            android:onClick="clickMenu"
            android:layout_weight="1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:text="Copas"
            android:id="@+id/button4"
            android:layout_marginTop="2dp"
            android:textSize="9dp"
            android:tag="Copas"
            android:onClick="clickMenu"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:id="@+id/btnVerPedido"
            android:layout_marginTop="2dp"
            android:src="@android:drawable/ic_menu_edit"
            android:tag="buscar"
            android:onClick="clickBuscador"
            android:layout_weight="1" />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/pneBotones"
        android:layout_toEndOf="@+id/pneBotones"
        android:stretchColumns="*"
        android:id="@+id/pneArt"
        android:layout_below="@+id/linearLayout2">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="New Button"
                android:id="@+id/button6"
                android:layout_gravity="bottom"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="New Button"
                android:id="@+id/button7"
                android:layout_gravity="bottom"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>