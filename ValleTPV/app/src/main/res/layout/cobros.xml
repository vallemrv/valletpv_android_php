<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="700dp"
        android:layout_height="350dp">

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="0.6"
          android:orientation="vertical">

         <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/relativeLayout"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0.70">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Total cuenta"
                android:textSize="30dp"
                android:id="@+id/lblTotal"
                android:layout_marginTop="10dp"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Entrega"
                android:textSize="25dp"
                android:id="@+id/entrega"
                android:layout_below="@+id/lblTotal"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Cambio"
                android:id="@+id/textView5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/entrega"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="3.00 €"
                android:textSize="30dp"
                android:id="@+id/lblPrecio"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="false"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0.00 €"
                android:id="@+id/lblEntrega"
                android:textSize="25dp"
                android:layout_below="@+id/lblPrecio"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0.00 €"
                android:id="@+id/lblCambio"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="false"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:layout_below="@+id/lblEntrega"/>



        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            >



            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="New Button"
                android:id="@+id/btnEfectivo"
                android:layout_weight="1"
                android:background="@drawable/cobrarxml"
                android:layout_margin="5dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btnTarjeta"
                android:layout_weight="1"
                android:background="@drawable/tarjetaxml"
                android:layout_margin="5dp"
                />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="New Button"
                android:id="@+id/btnSalir"
                android:background="@drawable/salirxml"
                android:layout_weight="1"
                android:layout_margin="5dp"/>

        </LinearLayout>

      </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical"
            android:id="@+id/pneBotonera">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/blancoxml"
                    android:text="1"
                    android:textSize="50dp"
                    android:tag="1"
                    android:layout_margin="5dp"
                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/blancoxml"
                    android:text="2"
                    android:textSize="50dp"
                    android:tag="2"
                    android:layout_margin="5dp"
                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/blancoxml"
                    android:text="3"
                    android:textSize="50dp"
                    android:tag="3"
                    android:layout_margin="5dp"
                    />

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/blancoxml"
                    android:text="4"
                    android:textSize="50dp"
                    android:tag="4"
                    android:layout_margin="5dp"
                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/blancoxml"
                    android:text="5"
                    android:textSize="50dp"
                    android:tag="5"
                    android:layout_margin="5dp"
                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/blancoxml"
                    android:text="6"
                    android:textSize="50dp"
                    android:tag="6"
                    android:layout_margin="5dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/blancoxml"
                    android:text="7"
                    android:textSize="50dp"
                    android:tag="7"
                    android:layout_margin="5dp"
                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/blancoxml"
                    android:text="8"
                    android:textSize="50dp"
                    android:tag="8"
                    android:layout_margin="5dp"
                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/blancoxml"
                    android:text="9"
                    android:textSize="50dp"
                    android:tag="9"
                    android:layout_margin="5dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/blancoxml"
                    android:text="."
                    android:textSize="50dp"
                    android:tag="."
                    android:layout_margin="5dp"
                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/blancoxml"
                    android:text="0"
                    android:textSize="50dp"
                    android:tag="0"
                    android:layout_margin="5dp"
                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/blancoxml"
                    android:text="C"
                    android:textSize="50dp"
                    android:tag="C"
                    android:layout_margin="5dp"
                    />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>





</RelativeLayout>