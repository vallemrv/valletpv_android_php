<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtDescripcion"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:hint="DescripciÃ³n" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/txtImporte"
            android:layout_below="@+id/txtDescripcion"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="Importe" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/Salir"
            android:layout_below="@+id/txtImporte"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/salirxml"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="OK"
            android:id="@+id/Aceptar"
            android:layout_below="@+id/txtImporte"
            android:layout_toLeftOf="@+id/Salir"
            android:layout_toStartOf="@+id/Salir"
            android:background="@drawable/blancoxml"
            android:layout_margin="5dp" />
    </RelativeLayout>
</LinearLayout>